{
  "compilerOptions": {
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "target": "ES2020",                          
    "module": "NodeNext",         
    "types": ["express", "node"],
    "esModuleInterop": true,
    "moduleResolution": "nodenext",         
    "strict": true,                     
    "skipLibCheck": true,                     
    "forceConsistentCasingInFileNames": true, 
    "outDir": "./dist",                       
    "rootDir": "./src"                        
  }
}
